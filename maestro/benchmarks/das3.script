#!/bin/sh

export SGE_ROOT=/usr/local/Cluster-Apps/sge
PRUN=/usr/local/VU/reserve.sge/bin/prun

NR_NODES=$1
shift
NR_PROCS=$1
shift
JAVA=$1
shift
ARGS=$*

OPTION=-1
RUNTIME=0:15:00

if [ `expr $NR_NODES \* 4` = "$NR_PROCS" ]; then

	OPTION=-4

elif [ `expr $NR_NODES \* 2` = "$NR_PROCS" ]; then

	OPTION=-2

fi

echo $PRUN $OPTION -asocial -t $RUNTIME -np $NR_NODES $JAVA $ARGS
exec $PRUN $OPTION -asocial -t $RUNTIME -np $NR_NODES -o plain-run$NR_NODES-out $JAVA $ARGS
