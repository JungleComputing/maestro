<?xml version="1.0"?>

<!--
   Ant include for JxRef

Notes:
   This is file makes it easy to include JxRef reports within Ant build scripts.

Prerequisites:

   jakarta-ant from http://jakarta.apache.org/ant/index.html

Include Instructions:
   To build, run

   ant <target>

   in the directory where this file is located with the target you want.

-->

<project >
  
    <property environment="env"/>
    <property name="jxrefJar" value="jxref-0.6.2/jxref.jar"/>
	  <taskdef name="jxref" classname="org.jxref.report.ant.JxRefTask">
	    <classpath>
					<pathelement location="${jxrefJar}"/>
				<fileset dir="${env.JXREF_HOME}/lib">
						<include name="**/*.jar"/>
				</fileset>
      </classpath>
	  </taskdef>
	  
	  <typedef name="methodXref" classname="org.jxref.report.ant.MethodXref">
	    <classpath>
							<pathelement location="${jxrefJar}"/>
							  <fileset dir="${env.JXREF_HOME}/lib">
									<include name="**/*.jar"/>
							</fileset>
      </classpath>
	  </typedef>
	  
	  <typedef name="unusedMethod" classname="org.jxref.report.ant.UnusedMethod">
			    <classpath>
									<pathelement location="${jxrefJar}"/>
									  <fileset dir="${env.JXREF_HOME}/lib">
											<include name="**/*.jar"/>
									</fileset>
		      </classpath>
	  </typedef>
	  
	  <typedef name="unusedClass" classname="org.jxref.report.ant.UnusedClass">
			    <classpath>
									<pathelement location="${jxrefJar}"/>
									  <fileset dir="${env.JXREF_HOME}/lib">
											<include name="**/*.jar"/>
									</fileset>
		      </classpath>
	  </typedef>
	  
	  <typedef name="sequenceFlow" classname="org.jxref.report.ant.SequenceFlow">
					    <classpath>
											<pathelement location="${jxrefJar}"/>
											  <fileset dir="${env.JXREF_HOME}/lib">
													<include name="**/*.jar"/>
											</fileset>
				      </classpath>
	  </typedef>
	  
	  <typedef name="complexity" classname="org.jxref.report.ant.Complexity">
							    <classpath>
													<pathelement location="${jxrefJar}"/>
													  <fileset dir="${env.JXREF_HOME}/lib">
															<include name="**/*.jar"/>
													</fileset>
						      </classpath>
	  </typedef>
	  
	  <typedef name="include" classname="org.jxref.report.ant.Include">
	    <classpath>
						<pathelement location="${jxrefJar}"/>
						  <fileset dir="${env.JXREF_HOME}/lib">
								<include name="**/*.jar"/>
						</fileset>
      </classpath>
	  </typedef>
	  
	  <typedef name="exclude" classname="org.jxref.report.ant.Exclude">
	    <classpath>
						<pathelement location="${jxrefJar}"/>
						  <fileset dir="${env.JXREF_HOME}/lib">
								<include name="**/*.jar"/>
						</fileset>
      </classpath>
	  </typedef>

	
	
</project>
